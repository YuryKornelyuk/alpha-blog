<div class="container">

  <%= form_with model: @user, class: 'shadow mb-3 bg-info rounded p-3' do |form| %>

    <%= render 'shared/errors', obj: @user %>

    <div class="row mt-4">
      <%= form.label :username, style: "display: block", class: 'col-2 col-form-label text-light' %>
      <div class="col-10">
        <%= form.text_field :username, class: 'form-control shadow rounded', placeholder: "User name" %>
      </div>
    </div>

    <div class="row mt-4">
      <%= form.label :email, style: "display: block", class: 'col-2 col-form-label text-light' %>
      <div class="col-10">
        <%= form.email_field :email, class: 'form-control shadow rounded', placeholder: "E-mail" %>
      </div>
    </div>

    <div class="row mt-4">
      <%= form.label :password, style: "display: block", class: 'col-2 col-form-label text-light' %>
      <div class="col-10">
        <%= form.password_field :password, class: 'form-control shadow rounded', placeholder: "Password" %>
      </div>
    </div>

    <div class="mt-4 text-center">
      <%= form.submit 'Sign up', class: 'btn btn-outline-light btn-lg' %>
    </div>
  <% end %>

  <div class="text-center mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info' %>
  </div>
</div>