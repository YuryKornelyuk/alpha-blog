<div class="container">

  <%= form_with model: @article, class: 'shadow mb-3 bg-info rounded p-3' do |form| %>

    <%= render 'shared/errors' %>

    <div class="row mt-4">
      <%= form.label :title, style: "display: block", class: 'col-2 col-form-label text-light' %>
      <div class="col-10">
        <%= form.text_field :title, class: 'form-control shadow rounded', placeholder: "Title" %>
      </div>
    </div>

    <div class="row mt-4">
      <%= form.label :description, style: "display: block", class: 'col-2 col-form-label text-light' %>
      <div class="col-10">
        <%= form.text_area :description, rows: 10, class: 'form-control shadow rounded', placeholder: "Description" %>
      </div>
    </div>

    <div class="mt-4 text-center">
      <%= form.submit class: 'btn btn-outline-light btn-lg' %>
    </div>
  <% end %>

  <div class="text-center mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info' %>
  </div>
</div>