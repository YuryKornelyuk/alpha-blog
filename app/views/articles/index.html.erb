<div id="page-content">
  <p style="color: green" class="text-center"><%= notice %></p>

  <h1 class="text-center mt-4">Articles</h1>

  <div class="text-center">
    <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
  </div>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header fst-italic">
              by John Doe
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-success' %></h5>
              <p class="card-text"><%= truncate(article.description, length: 300) %></p>
              <%= link_to 'View', article_path(article), class: 'btn btn-outline-success' %>
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-info' %>
              <%= link_to 'Delete', article_path(article), class: 'btn btn-outline-danger',
                          data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
            </div>
            <div class="card-footer text-body-secondary">
              <div class="small"><%= "Created #{time_ago_in_words(article.created_at)} ago" %></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
